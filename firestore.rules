rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // USERS: Allow authenticated users to read any user document
    // This is needed for property listings to show who posted the property
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write, update, delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // BROKERS: Allow authenticated users to read broker info
    match /brokers/{brokerId} {
      allow read: if request.auth != null;
      allow write, update, delete: if request.auth != null && request.auth.uid == brokerId;
    }
    
    // PROPERTIES: Authenticated users can read, owners can write/delete
    match /properties/{propertyId} {
      allow read: if request.auth != null;
      allow write, update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // KYC/APPROVALS: Only admins can read/write
    match /kycSubmissions/{document} {
      allow read, write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin";
      allow create: if request.auth != null;
    }
    
    // Fallback: Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}